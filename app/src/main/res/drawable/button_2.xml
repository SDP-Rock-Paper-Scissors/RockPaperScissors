<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#DF3131"
            />
            <corners
                android:radius="10dp"
            />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#EB7A7A"
            />
            <corners
                android:radius="10dp"
            />
        </shape>
    </item>
</selector>